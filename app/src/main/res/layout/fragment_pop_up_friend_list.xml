<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PopUpFriendList"
    android:background="@drawable/pop_up_friend_list_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="338dp"
        android:layout_height="404dp"
        android:background="@color/white"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/close"/>

                <EditText
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/searchbg"
                    android:drawableEnd="@drawable/searchloop"
                    android:cardCornerRadius="50dp"
                    android:elevation="4dp"
                    android:hint="Search your friend's id or email"
                    android:imeOptions="actionSearch"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColorHint="#7D7D7D"
                    android:textSize="16dp">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:id="@+id/profileFriend1a"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/profile"
                    android:layout_marginLeft="4dp" />

                <TextView
                    android:id="@+id/friendName1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your Friend's Name"
                    android:textColor="#171717"
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/plus"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="4dp"
                    />
            </LinearLayout>


        </LinearLayout>




    </androidx.cardview.widget.CardView>

</FrameLayout>