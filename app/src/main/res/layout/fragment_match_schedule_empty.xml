<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MatchSchedule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bgmatchschedule">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="52dp"
            >

            <TextView
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Match Schedule"
                android:textColor="#FFFF"
                android:textSize="28dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_marginRight="28dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/userprofile"
                android:layout_gravity="center|end"/>

        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#EFF5FE"
            android:layout_marginTop="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="16dp">

                   <FrameLayout
                       android:layout_marginTop="8dp"
                       android:layout_width="match_parent"
                       android:layout_height="92dp"
                       android:background="@drawable/bg_match_schedule"
                       >

                       <TextView
                           android:layout_gravity="center_vertical"
                           android:layout_width="172dp"
                           android:layout_height="wrap_content"
                           android:textStyle="bold"
                           android:layout_marginStart="20dp"
                           android:lineSpacingExtra="4dp"
                           android:text="You donâ€™t have any match schedule yet. Match with your friend"
                           android:textColor="#ffff"/>

                       <ImageView
                           android:layout_gravity="center_vertical|end"
                           android:layout_marginTop="8dp"
                           android:layout_width="142dp"
                           android:layout_height="132dp"
                           android:background="@drawable/blob"/>

                   </FrameLayout>

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</FrameLayout>
