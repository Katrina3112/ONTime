<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frendList"
    android:background="@drawable/bgfriendlist">


    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@drawable/userprofile"
        android:layout_gravity="end"
        android:layout_marginTop="24dp"
        android:layout_marginRight="28dp"/>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="107dp"
            app:cardBackgroundColor="#EFF5FE"
            app:cardCornerRadius="25dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginBottom="10dp"
                    android:text="Friend List"
                    android:textColor="#102EA8"
                    android:textSize="28dp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10">

                        <EditText
                            android:id="@+id/searchView"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/searchbg"
                            android:cardCornerRadius="50dp"
                            android:drawableEnd="@drawable/searchloop"
                            android:elevation="4dp"
                            android:hint="Search your friend's name"
                            android:imeOptions="actionSearch"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColorHint="#7D7D7D"
                            android:textSize="16dp" />

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/addFriend"
                        android:layout_width="12dp"
                        android:layout_height="44dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/addfriend"></ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="Friends"
                        android:textColor="#3478F6"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/friendList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="(1)"
                        android:textColor="#3478F6"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profileFriend1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/profile" />

                    <TextView
                        android:id="@+id/friendName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="20dp"
                        android:text="Your Friend's Name"
                        android:textColor="#171717"
                        android:textSize="20dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:text="Requests"
                        android:textColor="#3478F6"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/profileFriend1a"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/profile" />

                    <TextView
                        android:id="@+id/friendName1a"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:text="Your Friend's Name"
                        android:textColor="#171717"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        >

                        <ImageView
                            android:id="@+id/check"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:background="@drawable/check"
                            android:layout_marginRight="20dp"
                            >
                        </ImageView>
                        <ImageView
                            android:id="@+id/cross"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:background="@drawable/cross"
                            android:layout_marginRight="5dp">
                        </ImageView>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

<!--    </ScrollView>-->

</FrameLayout>